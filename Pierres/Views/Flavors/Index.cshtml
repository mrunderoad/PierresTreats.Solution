@{
  Layout = "_Layout";
}

@using Pierres.Models

<div class="jumbotron">
  <h1>Avaliable Flavors for @User.Identity.Name</h1>
</div>
<hr />
<div class="card flavorIndex">
@if (@Model.Count == 0)
{
  <h4>No Flavors have been added yet!</h4>
}
<ul>
  <h4>Avaliable Flavors!</h4>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>
</div>
<hr />
<button class="btn-warning">@Html.ActionLink("Add new Flavor", "Create")</button>