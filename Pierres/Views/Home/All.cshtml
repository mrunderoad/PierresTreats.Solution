@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>All Treats And Flavors!</h1>
  <p>These are all the <strong>Treats</strong> and <strong>Flavors</strong> at Pierres. Showing from all users.</p>
</div>
<hr />
<div class="row">
  <div class="card allTreat">
    @if (@ViewBag.Treats.Count == 0)
    {
      <h4>Sorry, No Treats Avaliable!</h4>
    }
    else
    {
      <h4>All Treats!</h4>
      @foreach (var treat in ViewBag.Treats)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</li>
      }
    }
  </div>
  <div class="card allFlav">
    @if (@ViewBag.Flavors.Count == 0)
    {
      <h4>Sorry, No Flavors Avaliable!</h4>
    }
    else
    {
      <h4>All Flavors!</h4>
      @foreach (var flavor in ViewBag.Flavors)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId })</li>
      }
    }
  </div>
</div>
<hr />